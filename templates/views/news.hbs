<div class="container">
	<h1>News</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-9">
			<h4 class="text-weight-normal">Showing {{ data.news.length}} news.</h4>
			<div class="blog">
				{{# each data.news}}
				<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">
					<h2><a target="_blank" href="{{url}}">{{{title}}}</a></h2>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
	{{>pagination}}
</div>
